{
  "icon_path": "images/icons/white/",

  ".main-background": {"background": "#334d77"},
  ".active-main-background": {"background": "#263959"},

  ".drawer-background": {"background": "#4a75ba"},

  ".default-text": {"textColor": "#cecece"},
  ".red-text": {"textColor": "#911a1a"},
  ".black-text": {"textColor": "#000000"},
  ".white-text": {"textColor": "#ffffff"},

  ".default-border": {"borderColor": "#cecece"},


  ".list-element":{
    "layoutData":{
      "top":["prev()", 0],
      "height": 40,
      "left": 0,
      "right": 0
    },
    "highlightOnTouch": true
  },
  ".label": {
    "alignment": "left",
    "font": "normal 16px",
    "highlightOnTouch": false,
    "layoutData": {
      "left": 0,
      "right": "66%",
      "top": ["prev()", 10]
    }
  },
  ".input":{
    "alignment": "left",
    "font": "italic 16px",
    "highlightOnTouch": true,
    "layoutData": {
      "left": ["prev()",0],
      "right": 0,
      "baseline": "prev()"
    }
  },
  ".hint":{
    "font": "italic 10px",
    "layoutData": {
      "left": "33%",
      "right": 0,
      "top": "prev()"
    }
  }
}
